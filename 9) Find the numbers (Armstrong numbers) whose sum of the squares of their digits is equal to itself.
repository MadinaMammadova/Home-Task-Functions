#include <iostream>
#include <cmath>
using namespace std;
int armstrongornot(int n,int &a,int &k,int &b) {
 int i=1,s=0,m=0;
  cout<<"Insert Number = ";
  cin>>n;
  a=n;
  b=n;
while(n>0){
  m=m+1;
  n=n/10;
}
while(b>0){
  k=b%10;
  s=s+pow(k,m);
  b=b/10;
}
if(s==a){
   cout<<"Number is Armstrong";
}
else 
   cout<<"Number is not Armstrong";
  return s;
}
int main() {
  int n,a,k,b;
int result=armstrongornot(n,a,k,b);
  return 0;
}
